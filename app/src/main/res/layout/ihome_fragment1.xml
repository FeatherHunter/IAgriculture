    <TextView
        android:id="@+id/ground_text"
        android:layout_marginTop="5pt"
        android:layout_width="40pt"
        android:layout_height="12pt"
        android:text="土壤(?)"
        android:layout_below="@id/total_air_layout"
        android:layout_marginLeft="15pt"
        android:textSize="8pt"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/total_ground_layout"
        android:layout_below="@id/ground_text"
        android:layout_marginTop="10pt"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_width="match_parent"
        android:layout_height="60pt "
        android:weightSum="10"
        android:orientation="vertical"
        android:background="@drawable/static_bg"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10pt"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="15">
            <TextView
                android:id="@+id/device_irrigation_text"
                android:layout_width="80dip"
                android:layout_height="40dip"
                android:layout_below="@id/ground_text"
                android:text="灌溉"
                android:gravity="center"
                android:layout_weight="5"/>

            <TextView
                android:id="@+id/device_warm_text"
                android:layout_width="80dip"
                android:layout_height="40dip"
                android:layout_below="@id/ground_text"
                android:text="加热"
                android:layout_weight="5"
                android:gravity="center"/>


            <TextView
                android:id="@+id/device_humi_text"
                android:layout_width="80dip"
                android:layout_height="40dip"
                android:layout_below="@id/ground_text"
                android:text="加湿"
                android:layout_weight="5"
                android:gravity="center"/>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10pt"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/device_irrigation_state"
                android:layout_width="20dip"
                android:layout_height="10pt"
                android:layout_below="@id/ground_text"
                android:text="●"
                android:textSize="10dip"
                android:layout_weight="1"
                android:textColor="@color/red"
                android:gravity="center"/>


            <TextView
                android:id="@+id/device_warm_state"
                android:layout_width="20dip"
                android:layout_height="10pt"
                android:layout_below="@id/ground_text"
                android:text="●"
                android:textSize="10dip"
                android:layout_weight="1"
                android:textColor="@color/red"
                android:gravity="center"/>


            <TextView
                android:id="@+id/device_humi_state"
                android:layout_width="20dip"
                android:layout_height="10pt"
                android:layout_below="@id/ground_text"
                android:text="●"
                android:textSize="10dip"
                android:layout_weight="1"
                android:textColor="@color/red"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10pt"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="当前温度"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="水分含量"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10pt"
            android:layout_weight="3"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="14.1℃"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="44.1%"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

