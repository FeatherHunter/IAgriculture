<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"  
    android:layout_height="match_parent"
    android:background="@color/whitesmoke">


    <TextView
        android:id="@+id/greenhouse_text"
        android:layout_width="40pt"
        android:layout_height="10pt"
        android:layout_marginTop="15pt"
        android:layout_marginLeft="10pt"
        android:text="温室大棚数据简报"
        android:textSize="8pt"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:id="@+id/weather_textview"
        android:layout_width="30pt"
        android:layout_height="25dip"
        android:text="天气状况"
        android:layout_marginLeft="-10pt"
        android:layout_below="@id/greenhouse_text"
        android:layout_toRightOf="@id/greenhouse_text"
        android:textSize="7pt" />
    <ImageView
        android:id="@+id/weather_value"
        android:layout_width="8pt"
        android:layout_height="8pt"
        android:layout_toRightOf="@id/weather_textview"
        android:layout_alignTop="@id/weather_textview"
        android:src="@drawable/pic_sun"/>

    <Button
        android:id="@+id/weather_future"
        android:layout_width="30pt"
        android:layout_height="8pt"
        android:layout_toRightOf="@id/weather_value"
        android:background="@drawable/static_bg"
        android:layout_alignTop="@id/weather_textview"
        android:text="未来天气"
        android:textSize="6pt"
        android:textColor="@color/dodgerblue"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/air_text"
        android:layout_marginTop="5pt"
        android:layout_width="40pt"
        android:layout_height="12pt"
        android:text="空气(?)"
        android:layout_below="@id/greenhouse_text"
        android:layout_marginLeft="15pt"
        android:textSize="8pt"
        android:textColor="@color/black"/>

    <LinearLayout
        android:id="@+id/total_air_layout"
        android:layout_below="@id/air_text"
        android:layout_marginTop="10pt"
        android:layout_marginLeft="10pt"
        android:layout_marginRight="10pt"
        android:layout_width="match_parent"
        android:layout_height="25pt "
        android:weightSum="2"
        android:orientation="vertical"
        android:background="@drawable/static_bg"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10pt"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="当前气温"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="当前湿度"
                android:gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="10pt"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:weightSum="2">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="16.1℃"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="37%"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/button_statics"
        android:layout_width="35pt"
        android:layout_height="10pt"
        android:text="详细数据"
        android:textColor="@color/white"
        android:textSize="8pt"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/greenhouse_text"
        android:background="@color/dodgerblue"/>

