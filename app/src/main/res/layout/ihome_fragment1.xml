<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"  
    android:layout_height="match_parent"
    android:background="#ffffff">


    <TextView
        android:id="@+id/balcony"
        android:layout_marginLeft="10dip"
        android:layout_width="100pt"
        android:layout_height="25dip"
        android:text="智能温室大棚1号"
        android:textColor="@color/green"
        android:textSize="20dip"/>
    <TextView
        android:id="@+id/weather_textview"
        android:layout_width="80dip"
        android:layout_height="25dip"
        android:text="天气状况"
        android:layout_marginLeft="100pt"
        android:textSize="18dip" />
    <ImageView
        android:id="@+id/weather_value"
        android:layout_width="25dip"
        android:layout_height="25dip"
        android:layout_toRightOf="@id/weather_textview"
        android:src="@drawable/pic_sun"/>

    <Button
        android:id="@+id/weather_future"
        android:layout_width="40pt"
        android:layout_height="10pt"
        android:layout_toRightOf="@id/weather_value"
        android:background="@drawable/button_weather_selector"
        android:text="未来天气"
        android:textSize="7pt"
        android:textColor="@color/dodgerblue"/>

    <ImageView
        android:layout_marginTop="15pt"
        android:id="@+id/air_pic"
        android:layout_width="25pt"
        android:layout_height="25pt"
        android:src="@drawable/pic_cloud"
        android:layout_marginLeft="15pt"
        />
    <TextView
        android:id="@+id/air_text"
        android:layout_marginTop="1pt"
        android:layout_width="20dip"
        android:layout_height="50dip"
        android:text="空气"
        android:layout_toRightOf="@id/air_pic"
        android:layout_alignTop="@id/air_pic"
        android:textSize="18dip"/>

    <TextView
        android:id="@+id/bedroom_tempTextview"
        android:layout_width="100dip"
        android:layout_height="40dip"
        android:layout_below="@id/air_pic"
        android:layout_marginLeft="15dip"
        android:text="当前气温"
        android:textSize="18dip"
        android:gravity="center"/>
    <TextView
        android:id="@+id/bedroom_tempValue"
        android:layout_width="80dip"
        android:layout_height="40dip"
        android:layout_below="@id/air_pic"
        android:layout_toRightOf="@id/bedroom_tempTextview"
        android:text="17"
        android:textSize="18dip"
        android:gravity="center"/>
    <TextView
        android:id="@+id/bedroom_tempUnit"
        android:layout_width="20dip"
        android:layout_height="40dip"
        android:layout_below="@id/air_pic"
        android:layout_toRightOf="@id/bedroom_tempValue"
        android:text="℃"
        android:textSize="18dip"
        android:gravity="center"/>
    <TextView
        android:id="@+id/bedroom_humiTextview"
        android:layout_width="100dip"
        android:layout_height="40dip"
        android:layout_below="@id/bedroom_tempTextview"
        android:layout_marginLeft="15dip"
        android:text="当前湿度"
        android:textSize="18dip"
        android:gravity="center"/>

    <TextView
        android:id="@+id/bedroom_humiValue"
        android:layout_width="80dip"
        android:layout_height="40dip"
        android:layout_below="@id/bedroom_tempValue"
        android:layout_toRightOf="@id/bedroom_humiTextview"
        android:text="36"
        android:textSize="18dip"
        android:gravity="center"/>
    <TextView
        android:id="@+id/bedroom_humiUnit"
        android:layout_width="20dip"
        android:layout_height="40dip"
        android:layout_below="@id/bedroom_tempValue"
        android:layout_toRightOf="@id/bedroom_tempValue"
        android:text="%"
        android:textSize="18dip"
        android:gravity="center"/>
    <Button
        android:layout_width="13pt"
        android:layout_height="50pt"
        android:text="详细数据"
        android:textColor="@color/limegreen"
        android:textSize="8pt"
        android:layout_alignParentRight="true"
        android:layout_marginTop="80pt"
        android:background="@drawable/button_sdata_selector"/>

