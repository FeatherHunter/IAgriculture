    <ImageView
        android:id="@+id/ground_pic"
        android:layout_width="25pt"
        android:layout_height="25pt"
        android:layout_centerVertical="true"
        android:src="@drawable/pic_ground"
        android:layout_marginLeft="15pt"
        />
    <TextView
        android:id="@+id/ground_text"
        android:layout_marginTop="1pt"
        android:layout_width="20dip"
        android:layout_height="50dip"
        android:text="土壤"
        android:layout_toRightOf="@id/ground_pic"
        android:layout_alignTop="@id/ground_pic"
        android:textSize="18dip"/>
    <TextView
        android:id="@+id/device_irrigation_text"
        android:layout_width="80dip"
        android:layout_height="40dip"
        android:layout_below="@id/ground_pic"
        android:layout_marginLeft="15dip"
        android:text="灌溉"
        android:textSize="18dip"
        android:gravity="center"/>

    <TextView
        android:id="@+id/device_irrigation_state"
        android:layout_width="20dip"
        android:layout_height="45dip"
        android:layout_below="@id/ground_text"
        android:layout_toRightOf="@id/device_irrigation_text"
        android:text="●"
        android:textSize="10dip"
        android:textColor="@color/red"
        android:gravity="center"/>
    <TextView
        android:id="@+id/device_warm_text"
        android:layout_width="80dip"
        android:layout_height="40dip"
        android:layout_below="@id/ground_text"
        android:layout_toRightOf="@id/device_irrigation_state"
        android:layout_marginLeft="10dip"
        android:text="加热"
        android:textSize="18dip"
        android:gravity="center"/>

    <TextView
        android:id="@+id/device_warm_state"
        android:layout_width="20dip"
        android:layout_height="45dip"
        android:layout_below="@id/ground_text"
        android:layout_toRightOf="@id/device_warm_text"
        android:text="●"
        android:textSize="10dip"
        android:textColor="@color/red"
        android:gravity="center"/>

    <TextView
        android:id="@+id/device_humi_text"
        android:layout_width="80dip"
        android:layout_height="40dip"
        android:layout_below="@id/ground_text"
        android:layout_toRightOf="@id/device_warm_state"
        android:layout_marginLeft="10dip"
        android:text="加湿"
        android:textSize="18dip"
        android:gravity="center"/>

    <TextView
        android:id="@+id/device_humi_state"
        android:layout_width="20dip"
        android:layout_height="45dip"
        android:layout_below="@id/ground_text"
        android:layout_toRightOf="@id/device_humi_text"
        android:text="●"
        android:textSize="10dip"
        android:textColor="@color/red"
        android:gravity="center"/>

    <TextView
        android:id="@+id/ground_tempTextview"
        android:layout_width="100dip"
        android:layout_height="40dip"
        android:layout_below="@id/device_irrigation_text"
        android:layout_marginLeft="15dip"
        android:text="当前温度"
        android:textSize="18dip"
        android:gravity="center"/>
    <TextView
        android:id="@+id/ground_tempValue"
        android:layout_width="80dip"
        android:layout_height="40dip"
        android:layout_alignTop="@id/ground_tempTextview"
        android:layout_toRightOf="@id/ground_tempTextview"
        android:text="22"
        android:textSize="18dip"
        android:gravity="center"/>
    <TextView
        android:id="@+id/ground_tempUnit"
        android:layout_width="20dip"
        android:layout_height="40dip"
        android:layout_below="@id/air_pic"
        android:layout_alignTop="@id/ground_tempTextview"
        android:layout_toRightOf="@id/ground_tempValue"
        android:text="℃"
        android:textSize="18dip"
        android:gravity="center"/>
    <TextView
        android:id="@+id/ground_humiTextview"
        android:layout_width="100dip"
        android:layout_height="40dip"
        android:layout_below="@id/ground_tempTextview"
        android:layout_marginLeft="15dip"
        android:text="当前水分"
        android:textSize="18dip"
        android:gravity="center"/>

    <TextView
        android:id="@+id/ground_humiValue"
        android:layout_width="80dip"
        android:layout_height="40dip"
        android:layout_alignTop="@id/ground_humiTextview"
        android:layout_toRightOf="@id/ground_humiTextview"
        android:text="45"
        android:textSize="18dip"
        android:gravity="center"/>
    <TextView
        android:id="@+id/ground_humiUnit"
        android:layout_width="20dip"
        android:layout_height="40dip"
        android:layout_alignTop="@id/ground_humiTextview"
        android:layout_toRightOf="@id/ground_humiValue"
        android:text="%"
        android:textSize="18dip"
        android:gravity="center"/>
