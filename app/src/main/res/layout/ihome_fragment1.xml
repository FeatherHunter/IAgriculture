<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:materialdesign="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/whitesmoke">

            <RelativeLayout
                android:id="@+id/igreen_data_layout"
                android:layout_width="match_parent"
                android:layout_height="25pt"
                android:background="@color/white">

                <TextView
                    android:id="@+id/air_text"
                    android:layout_marginTop="10pt"
                    android:layout_width="45pt"
                    android:layout_height="12pt"
                    android:text="实时数据(?)"
                    android:layout_marginLeft="15pt"
                    android:textSize="8pt"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/weather_textview"
                    android:layout_width="30pt"
                    android:layout_height="25dip"
                    android:text="天气状况"
                    android:layout_marginLeft="80pt"
                    android:layout_toRightOf="@id/air_text"
                    android:layout_alignTop="@id/air_text"
                    android:textSize="7pt" />
                <ImageView
                    android:id="@+id/weather_value"
                    android:layout_width="8pt"
                    android:layout_height="8pt"
                    android:layout_toRightOf="@id/weather_textview"
                    android:layout_alignTop="@id/weather_textview"
                    android:src="@drawable/pic_sun"/>

            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/lightgray"
                android:layout_below="@id/igreen_data_layout"
                android:layout_marginTop="25pt"/>

            <LinearLayout
                android:id="@+id/total_air_layout"
                android:layout_below="@id/igreen_data_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="2dip"
                android:layout_height="100pt "
                android:weightSum="3"
                android:orientation="vertical"
                android:background="@color/white"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10pt"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="6">
                    <ImageView
                        android:layout_width="10pt"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:src="@drawable/igreen_temp_icon"
                        android:layout_weight="1"
                        />
                    <LinearLayout
                        android:layout_width="10pt"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:weightSum="3"
                        android:layout_marginTop="5pt"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1pt"
                            android:text="温度探测器"
                            android:textSize="8pt"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1pt"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="空气"
                                android:textSize="6pt"
                                android:gravity="center_vertical"/>
                            <TextView
                                android:id="@+id/igreen_fragment_catemp"
                                android:layout_width="30pt"
                                android:layout_height="match_parent"
                                android:text="16.1℃"
                                android:textSize="6pt"
                                android:gravity="center"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1pt"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="土壤"
                                android:textSize="6pt"
                                android:gravity="center_vertical"/>
                            <TextView
                                android:id="@+id/igreen_fragment_cgtemp"
                                android:layout_width="30pt"
                                android:layout_height="match_parent"
                                android:text="16.1℃"
                                android:textSize="6pt"
                                android:gravity="center"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:background="@color/lightgray" />

                    <ImageView
                        android:layout_width="10pt"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:src="@drawable/igreen_water_icon"
                        android:layout_weight="1"
                        />
                    <LinearLayout
                        android:layout_width="10pt"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:layout_marginTop="5pt"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1pt"
                            android:text="湿度探测器"
                            android:textSize="8pt"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:gravity="center_vertical"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1pt"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="空气"
                                android:textSize="6pt"
                                android:gravity="center_vertical"/>
                            <TextView
                                android:id="@+id/igreen_fragment_cahumi"
                                android:layout_width="30pt"
                                android:layout_height="match_parent"
                                android:text="34%"
                                android:textSize="6pt"
                                android:gravity="center"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1pt"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="土壤"
                                android:textSize="6pt"
                                android:gravity="center_vertical"/>
                            <TextView
                                android:id="@+id/igreen_fragment_cghumi"
                                android:layout_width="30pt"
                                android:layout_height="match_parent"
                                android:text="41%"
                                android:textSize="6pt"
                                android:gravity="center"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/lightgray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10pt"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="6">

                    <ImageView
                        android:layout_width="10pt"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/igreen_findpeople_icon" />

                    <LinearLayout
                        android:layout_width="10pt"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:weightSum="3"
                        android:layout_marginTop="5pt"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1pt"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="人体感应器"
                            android:textColor="@color/black"
                            android:textSize="8pt" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="1pt"
                            android:layout_weight="1"
                            android:layout_marginTop="2pt"
                            android:gravity="center_vertical"
                            android:text="早上9:00有人经过"
                            android:textSize="6pt"/>



                    </LinearLayout>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:background="@color/lightgray" />
                    <ImageView
                        android:layout_width="10pt"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/igreen_warning_icon" />

                    <LinearLayout
                        android:layout_width="10pt"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:weightSum="3"
                        android:layout_marginTop="5pt"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1pt"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="监控报警"
                            android:textColor="@color/black"
                            android:textSize="8pt" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1pt"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="当前状态："
                                android:textSize="6pt"
                                android:gravity="center_vertical"/>
                            <TextView
                                android:layout_width="30pt"
                                android:layout_height="match_parent"
                                android:text="关闭"
                                android:textSize="6pt"
                                android:gravity="center"/>

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/lightgray" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10pt"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:weightSum="6">
                    <ImageView
                        android:layout_width="10pt"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:src="@drawable/igreen_warmup_icon"
                        android:layout_weight="1"
                        />
                    <LinearLayout
                        android:layout_width="10pt"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:weightSum="3"
                        android:layout_marginTop="5pt"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1pt"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="植被取暖器"
                            android:textColor="@color/black"
                            android:textSize="8pt" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1pt"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="当前状态："
                                android:textSize="6pt"
                                android:gravity="center_vertical"/>
                            <TextView
                                android:layout_width="30pt"
                                android:layout_height="match_parent"
                                android:text="关闭"
                                android:textSize="6pt"
                                android:gravity="center"/>

                        </LinearLayout>

                    </LinearLayout>
                    <View
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:background="@color/lightgray" />
                    <ImageView
                        android:layout_width="10pt"
                        android:layout_height="match_parent"
                        android:scaleType="centerInside"
                        android:src="@drawable/igreen_irrigation_icon"
                        android:layout_weight="1"
                        />
                    <LinearLayout
                        android:layout_width="10pt"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:weightSum="3"
                        android:layout_marginTop="5pt"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="1pt"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="灌溉设备"
                            android:textColor="@color/black"
                            android:textSize="8pt" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1pt"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="当前状态："
                                android:textSize="6pt"
                                android:gravity="center_vertical"/>
                            <TextView
                                android:layout_width="30pt"
                                android:layout_height="match_parent"
                                android:text="关闭"
                                android:textSize="6pt"
                                android:gravity="center"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dip"
                    android:background="@color/lightgray" />
            </LinearLayout>


            <RelativeLayout
                android:id="@+id/igreen_video_layout"
                android:layout_width="match_parent"
                android:layout_marginTop="10pt"
                android:layout_height="wrap_content"
                android:layout_below="@id/total_air_layout"
                >

                <TextView
                    android:id="@+id/igreen_video_text"

                    android:layout_width="45pt"
                    android:layout_height="12pt"
                    android:text="视频监控(?)"
                    android:textSize="8pt"
                    android:layout_marginLeft="5pt"
                    android:textColor="@color/black"/>


                <Button
                    android:id="@+id/igreen_video_start_button"
                    android:layout_alignTop="@id/igreen_video_text"
                    android:layout_alignParentRight="true"
                    android:layout_width="30pt"
                    android:layout_height="10pt"
                    android:layout_marginRight="15pt"
                    android:background="@drawable/igreen_video_unselected"/>

                <RelativeLayout
                    android:id="@+id/igreen_video_dislayout"
                    android:layout_width="match_parent"
                    android:layout_height="230pt"
                    android:layout_below="@id/igreen_video_start_button"
                    android:layout_marginTop="5pt"
                    android:visibility="gone"
                    >
                    <ImageView
                        android:id="@+id/igreen_video_imageview"
                        android:layout_width="match_parent"
                        android:layout_height="110pt">

                    </ImageView>
                    <TextView
                        android:layout_width="30pt"
                        android:layout_height="14pt"
                        android:text="标清"
                        android:layout_below="@id/igreen_video_imageview"
                        android:layout_marginLeft="10pt"
                        android:textSize="9pt"
                        android:textColor="@color/dodgerblue"
                        android:gravity="center"
                        android:background="@drawable/blue_white"/>
                    <ImageView
                        android:id="@+id/video_volume_full"
                        android:layout_width="10pt"
                        android:layout_height="10pt"
                        android:layout_below="@id/igreen_video_imageview"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="10pt"

                        android:src="@drawable/video_enlarge"/>
                    <ImageView
                        android:id="@+id/video_enlarge"
                        android:layout_width="10pt"
                        android:layout_height="10pt"
                        android:layout_below="@id/igreen_video_imageview"
                        android:layout_toLeftOf="@id/video_volume_full"
                        android:layout_marginRight="10pt"
                        android:src="@drawable/video_volume_full"/>

                    <ImageView
                        android:id="@+id/video_photo_goldenrod"
                        android:layout_width="35pt"
                        android:layout_height="35pt"
                        android:layout_marginTop="35pt"
                        android:layout_below="@id/igreen_video_imageview"
                        android:scaleType= "center"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/igreen_video_blue"
                        android:src="@drawable/video_video_blue"/>
                    <TextView
                        android:layout_width="20pt"
                        android:layout_height="12pt"
                        android:text="录像"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"

                        android:layout_below="@id/video_photo_goldenrod"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:id="@+id/video_microphone_teal"
                        android:layout_width="25pt"
                        android:layout_height="25pt"
                        android:layout_marginTop="40pt"
                        android:layout_below="@id/igreen_video_imageview"
                        android:scaleType="centerInside"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/igreen_video_teal"
                        android:layout_toLeftOf="@id/video_photo_goldenrod"
                        android:layout_marginRight="10pt"
                        android:src="@drawable/video_microphone_teal"/>
                    <TextView
                        android:layout_width="20pt"
                        android:layout_height="12pt"
                        android:text="对讲"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_toLeftOf="@id/video_photo_goldenrod"
                        android:layout_marginRight="13pt"
                        android:layout_below="@id/video_microphone_teal"
                        android:textColor="@color/black"/>

                    <ImageView
                        android:id="@+id/video_photo_indianred"
                        android:layout_width="25pt"
                        android:layout_height="25pt"
                        android:layout_marginTop="40pt"
                        android:layout_below="@id/igreen_video_imageview"
                        android:scaleType="centerInside"

                        android:layout_centerHorizontal="true"
                        android:background="@drawable/igreen_video_indianred"
                        android:layout_toRightOf="@id/video_photo_goldenrod"
                        android:layout_marginLeft="10pt"
                        android:src="@drawable/video_photo_indianred"/>
                    <TextView
                        android:layout_width="20pt"
                        android:layout_height="12pt"
                        android:text="拍照"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_toRightOf="@id/video_photo_goldenrod"
                        android:layout_marginLeft="13pt"
                        android:layout_below="@id/video_photo_indianred"
                        android:textColor="@color/black"/>

                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
