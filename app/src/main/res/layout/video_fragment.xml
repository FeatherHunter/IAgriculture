<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"  
    android:layout_height="match_parent"
    android:background="#ffffff">
  

    <ImageView
        android:layout_marginTop="10dip"
        android:id="@+id/camera_jpg"
        android:layout_width="340dip"
        android:layout_height="280dip"
        	/>

    <TextView
        android:id="@+id/room"
        android:layout_marginLeft="10dip"
        android:layout_width="40dip"
        android:layout_height="25dip"
        android:text="卧室"
        android:layout_below="@id/camera_jpg"
        android:layout_marginTop="-10dip"
        android:textSize="20dip"/>
    <TextView
        android:id="@+id/room_tempTextview"
        android:layout_width="100dip"
        android:layout_height="40dip"
        android:layout_below="@id/room"
        android:layout_marginLeft="15dip"
        android:text="温度"
        android:textSize="18dip"
        android:gravity="center"/>
    <TextView
        android:id="@+id/room_tempValue"
        android:layout_width="80dip"
        android:layout_height="40dip"
        android:layout_below="@id/room"
        android:layout_toRightOf="@id/room_tempTextview"
        android:text="17"
        android:textSize="18dip"
        android:gravity="center"/>
    <TextView
        android:id="@+id/room_tempUnit"
        android:layout_width="20dip"
        android:layout_height="40dip"
        android:layout_below="@id/room"
        android:layout_toRightOf="@id/room_tempValue"
        android:text="℃"
        android:textSize="18dip"
        android:gravity="center"/>
    <Button
        android:id="@+id/room_tempControl"
        android:layout_width="120dip"
        android:layout_height="40dip"
        android:layout_toRightOf="@id/room_tempUnit"
        android:layout_marginTop="1dip"
        android:layout_below="@id/room"
        android:layout_marginLeft="19dip"
        android:text="空调遥控器"
        android:background="@drawable/button_ctrl_selector"
        android:textSize="18dip"/>
    <TextView
        android:id="@+id/room_humiTextview"
        android:layout_width="100dip"
        android:layout_height="40dip"
        android:layout_below="@id/room_tempTextview"
        android:layout_marginLeft="15dip"
        android:text="湿度"
        android:textSize="18dip"
        android:gravity="center"/>

    <TextView
        android:id="@+id/room_humiValue"
        android:layout_width="80dip"
        android:layout_height="40dip"
        android:layout_below="@id/room_tempValue"
        android:layout_toRightOf="@id/room_humiTextview"
        android:text="36"
        android:textSize="18dip"
        android:gravity="center"/>
    <TextView
        android:id="@+id/room_humiUnit"
        android:layout_width="20dip"
        android:layout_height="40dip"
        android:layout_below="@id/room_tempValue"
        android:layout_toRightOf="@id/room_tempValue"
        android:text="%"
        android:textSize="18dip"
        android:gravity="center"/>
    <Button
        android:id="@+id/room_humiControl"
        android:layout_width="120dip"
        android:layout_height="40dip"
        android:layout_toRightOf="@id/room_humiUnit"

        android:layout_below="@id/room_tempValue"
        android:layout_marginLeft="19dip"
        android:text="加湿器"
        android:textColor="@color/text_color_default"
        android:background="@drawable/button_ctrl_selector"
        android:textSize="18dip"/>

    <Button
        android:id="@+id/room_led1_button"
        android:layout_weight="1"
        android:layout_width="110dip"
        android:layout_height="40dip"
        android:layout_below="@id/room_humiTextview"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="-1dip"
        android:background="@drawable/button_ctrl_selector"
        android:gravity="center"
        android:textSize="15dip"
        android:textColor="@color/text_color_default"
        android:text="台灯1"
        />
    <Button
        android:id="@+id/room_led2_button"
        android:layout_weight="1"
        android:layout_width="110dip"
        android:layout_height="40dip"
        android:layout_below="@id/room_humiTextview"
        android:layout_toRightOf="@id/room_led1_button"
        android:layout_marginLeft="-1dip"
        android:layout_marginTop="-1dip"
        android:background="@drawable/button_ctrl_selector"
        android:gravity="center"
        android:textSize="15dip"
        android:textColor="@color/text_color_default"
        android:text="吊灯"
        />
    <Button
        android:id="@+id/room_led3_button"
        android:layout_weight="1"
        android:layout_width="120dip"
        android:layout_height="40dip"
        android:layout_below="@id/room_humiTextview"
        android:layout_marginLeft="-1dip"
        android:layout_marginTop="-1dip"
        android:layout_toRightOf="@id/room_led2_button"
        android:background="@drawable/button_ctrl_selector"
        android:gravity="center"
        android:textSize="15dip"
        android:textColor="@color/text_color_default"
        android:text="台灯2"
        />
    <Button
        android:id="@+id/room_win1_button"
        android:layout_weight="1"
        android:layout_width="110dip"
        android:layout_height="40dip"
        android:layout_below="@id/room_led1_button"
        android:layout_marginLeft="15dip"
        android:layout_marginTop="-1dip"
        android:background="@drawable/button_ctrl_selector"
        android:gravity="center"
        android:textSize="15dip"
        android:textColor="@color/text_color_default"
        android:text="窗户1"
        />
    <Button
        android:id="@+id/room_win2_button"
        android:layout_weight="1"
        android:layout_width="110dip"
        android:layout_height="40dip"
        android:layout_below="@id/room_led1_button"
        android:layout_marginLeft="-1dip"
        android:layout_marginTop="-1dip"
        android:layout_toRightOf="@id/room_win1_button"
        android:background="@drawable/button_ctrl_selector"
        android:gravity="center"
        android:textSize="15dip"
        android:textColor="@color/text_color_default"
        android:text="窗户2"
        />

    <Button
        android:id="@+id/room_door_button"
        android:layout_weight="1"
        android:layout_width="120dip"
        android:layout_height="40dip"
        android:layout_below="@id/room_led1_button"
        android:layout_toRightOf="@id/room_win2_button"
        android:layout_marginTop="-1dip"
        android:layout_marginLeft="-1dip"
        android:background="@drawable/button_ctrl_selector"
        android:gravity="center"
        android:textSize="15dip"
        android:textColor="@color/text_color_default"
        android:text="门"
        />
 
    
</RelativeLayout>

