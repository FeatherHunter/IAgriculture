<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="tab_style">
        <item name="android:layout_width">100pt</item>
        <item name="android:layout_height">25pt</item>
        <item name="android:background">@drawable/tab_background</item>
        <item name="android:drawablePadding">10pt</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:padding">10dip</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="title_bg" parent="android:Theme">
        <item name="android:windowTitleBackgroundStyle">@style/Titleground</item>
    </style>
    <style name="Titleground">
        <item name="android:background">#A9C75E</item>
    </style>

</resources>
